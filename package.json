{
  "name": "cse112-sp19-team10",
  "version": "1.0.0",
  "description": "<img src=\"img/rockstar_ninja.PNG\" title=\"Team Logo\" alt=\"Team Logo\" width=\"500px\"/>",
  "main": "index.js",
  "scripts": {
    "test": "npm run unitTest:hello && npm run unitTest:switch && npm run unitTest:rate",
    "unitTest:switch": "npx mocha test/unit/core-switch-test.js --exit --timeout 5000",
    "unitTest:rate": "npx mocha test/unit/core-rate-test.js --exit --timeout 5000",
    "unitTest:hello": "npx mocha test/unit/core-hello-test.js --exit --timeout 5000",
    "browserTest": "npm run browserTest:chrome && npm run browserTest:safari",
    "browserTest:chrome": "testcafe \"saucelabs:Chrome@beta:Windows 10\" test/browser",
    "browserTest:safariTest": "testcafe \"saucelabs:Safari@11.1:macOS 10.13\" test/browser",
    "coverage": "nyc --include=\"src/**\" --reporter=html --reporter=text npm run test",
    "lint": "standard --fix && standard",
    "localbrowser": "testcafe chrome test/browser"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ucsd-cse112/cse112-sp19-team10.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ucsd-cse112/cse112-sp19-team10/issues"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "ignore": [
      "/docs/",
      "test/browser"
    ]
  },
  "nyc": {
    "all": "true"
  },
  "homepage": "https://github.com/ucsd-cse112/cse112-sp19-team10#readme",
  "dependencies": {
    "acorn": "^6.1.1",
    "bootstrap": "^4.3.1",
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "shinobirockstar": "^1.0.0",
    "showroom": "^0.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run lint && documentation build src/ -f html -o docs"
    }
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "documentation": "^11.0.0",
    "husky": "^2.3.0",
    "istanbul": "^0.4.5",
    "jest": "^24.7.1",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "puppeteer": "^1.16.0",
    "showroom": "^0.9.3",
    "standard": "^12.0.1",
    "testcafe": "^1.1.4",
    "testcafe-browser-provider-saucelabs": "^1.7.0"
  }
}
