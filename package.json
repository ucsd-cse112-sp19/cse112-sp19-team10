{
  "name": "cse112-sp19-team10",
  "version": "1.0.0",
  "description": "<img src=\"img/rockstar_ninja.PNG\" title=\"Team Logo\" alt=\"Team Logo\" width=\"500px\"/>",
  "main": "index.js",
  "scripts": {
    "test": "npm run unitTest:hello && npm run unitTest:switch && npm run unitTest:rate",
    "unitTest:switch": "npx mocha tests/unit/core-switch-test.js --exit --timeout 5000",
    "unitTest:rate": "npx mocha tests/unit/core-rate-test.js --exit --timeout 5000",
    "unitTest:hello": "npx mocha tests/unit/core-hello-test.js --exit --timeout 5000",
    "browsertest": "npm run browserTest:chrome && npm run browserTest:safari",
    "browserTest:chrome": "testcafe \"saucelabs:Chrome@beta:Windows 10\" tests/browser",
    "browserTest:safari": "testcafe \"saucelabs:Safari@11.1:macOS 10.13\" tests/browser",
    "coverage": "nyc --include=\"src/**\" --reporter=html --reporter=text npm run test",
    "lint": "standard --fix && standard",
    "localbrowser": "testcafe chrome tests/browser",
    "coveragetest": "npm run pre_test && nyc --reporter=lcovonly --report-dir coverage_test --exclude Utils/ --exclude Tests/  mocha --bail --inline-diffs ./tests/unit/tests.js --timeout 10000 --exit && npm run post_test",
    "pre_test": "nyc --reporter=lcovonly --exclude Utils/ node tests/Utils/htmlMock.js",
    "post_test": "npm run pathrewrite && npm run cov_merge",
    "pathrewrite": "node ./tests/Utils/path.rewrite.js",
    "cov_merge": "node ./tests/Utils/coverage.merge.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ucsd-cse112/cse112-sp19-team10.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ucsd-cse112/cse112-sp19-team10/issues"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "ignore": [
      "/docs/",
      "tests/browser"
    ]
  },
  "nyc": {
    "all": "true"
  },
  "homepage": "https://github.com/ucsd-cse112/cse112-sp19-team10#readme",
  "dependencies": {
    "acorn": "^6.1.1",
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "puppeteer-to-istanbul": "^1.2.2",
    "shinobirockstar": "^1.0.0",
    "showroom": "^0.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run lint && documentation build src/ -f html -o docs"
    }
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "documentation": "^11.0.0",
    "flat": "^4.1.0",
    "husky": "^2.3.0",
    "istanbul": "^0.4.5",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "puppeteer": "^1.17.0",
    "showroom": "^0.9.3",
    "standard": "^12.0.1",
    "testcafe": "^1.1.4",
    "testcafe-browser-provider-saucelabs": "^1.7.0"
  }
}
